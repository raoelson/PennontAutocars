<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="2dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/card_margin">

            <LinearLayout
                style="@style/Widget.CardContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:id="@+id/card_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:addStatesFromChildren="true"
                    android:padding="@dimen/spacing_minor">

                    <TextView
                        android:id="@+id/textview_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lieu de départ"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/blue"
                        android:layout_marginLeft="10dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"  />

                </FrameLayout>
                <TableLayout
                    android:id="@+id/table"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/spacing_major">

                    <TableRow
                        >
                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Adresse"
                            android:textStyle="bold"
                            android:textSize="14dp"
                            android:fontFamily="sans-serif-condensed"
                            />

                        <TextView
                            android:id="@+id/textView_adresse_depart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ID Show Here"
                            android:ellipsize="end"
                            android:textSize="14dp"
                            android:layout_marginLeft="25dp"
                            android:fontFamily="sans-serif-condensed"
                            />
                    </TableRow>

                    <TableRow
                        android:layout_marginTop="5dp">

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="Code Postal"
                            />

                        <TextView
                            android:id="@+id/textView_codepostal_depart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25dp"
                            android:ellipsize="end"
                            android:text="Name Show Here" />
                    </TableRow>

                    <TableRow
                        android:layout_marginTop="5dp">

                        <TextView
                            android:id="@+id/textView5_"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="Ville"
                            />

                        <TextView
                            android:id="@+id/textView_ville_depart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Phone Number Show"
                            android:ellipsize="end"
                            android:layout_marginLeft="25dp"
                            />
                    </TableRow>

                    <TableRow
                        android:layout_marginTop="5dp">

                        <TextView
                            android:id="@+id/textView7_"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="Pays"
                            />

                        <TextView
                            android:id="@+id/textView_pays_depart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Subject Show Here"
                            android:ellipsize="end"
                            android:layout_marginLeft="25dp"
                            />

                    </TableRow>
                </TableLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/card_margin">

            <LinearLayout
                style="@style/Widget.CardContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:id="@+id/card_header_"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:addStatesFromChildren="true"
                    android:padding="@dimen/spacing_minor">

                    <TextView
                        android:id="@+id/textview_title_"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lieu d'arrivée"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/blue"
                        android:layout_marginLeft="10dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"  />

                </FrameLayout>
                <TableLayout
                    android:id="@+id/table_"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/spacing_major">

                    <TableRow
                        >
                        <TextView
                            android:id="@+id/textView_"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Adresse"
                            android:textStyle="bold"
                            android:textSize="14dp"
                            android:fontFamily="sans-serif-condensed"
                            />

                        <TextView
                            android:id="@+id/textView_adresse_arrivee"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ID Show Here"
                            android:ellipsize="end"
                            android:textSize="14dp"
                            android:layout_marginLeft="25dp"
                            android:fontFamily="sans-serif-condensed"
                            />
                    </TableRow>

                    <TableRow
                        android:layout_marginTop="5dp">

                        <TextView
                            android:id="@+id/textView3_"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="Code Postal"
                            />

                        <TextView
                            android:id="@+id/textView_codepostal_arrivee"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25dp"
                            android:ellipsize="end"
                            android:text="Name Show Here" />
                    </TableRow>

                    <TableRow
                        android:layout_marginTop="5dp">

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="Ville"
                            />

                        <TextView
                            android:id="@+id/textView_ville_arrivee"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Phone Number Show"
                            android:ellipsize="end"
                            android:layout_marginLeft="25dp"
                            />
                    </TableRow>

                    <TableRow
                        android:layout_marginTop="5dp">

                        <TextView
                            android:id="@+id/textView7__"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="Pays"
                            />

                        <TextView
                            android:id="@+id/textView_pays_arrivee"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Subject Show Here"
                            android:ellipsize="end"
                            android:layout_marginLeft="25dp"
                            />

                    </TableRow>
                </TableLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout>
</LinearLayout>