<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="2dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/card_margin">

            <LinearLayout
                style="@style/Widget.CardContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:id="@+id/card_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:addStatesFromChildren="true"
                    android:padding="@dimen/spacing_minor">

                    <TextView
                        android:id="@+id/textview_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Informations générales"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/blue"
                        android:layout_marginLeft="10dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"  />

                </FrameLayout>
                <TableLayout
                    android:id="@+id/table"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/spacing_major">

                    <TableRow
                        android:layout_marginTop="5dp">
                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tél\nProfessionnel"
                            android:textStyle="bold"
                            android:textSize="14dp"
                            android:fontFamily="sans-serif-condensed"
                            />

                        <TextView
                            android:id="@+id/textView_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ID Show Here"
                            android:textSize="14dp"
                            android:layout_marginLeft="25dp"
                            android:fontFamily="sans-serif-condensed"
                            />
                    </TableRow>

                    <TableRow
                        android:layout_marginTop="5dp">

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="Adresse"
                            />

                        <TextView
                            android:id="@+id/textView_adresse1"
                            android:layout_width="wrap_content"
                            android:ellipsize="end"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25dp"
                            android:text="Name Show Here" />
                    </TableRow>


                </TableLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>


    </LinearLayout>
</LinearLayout>